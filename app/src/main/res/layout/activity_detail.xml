<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:background="#fff"
    tools:context=".vegI.DetailActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_details"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
         android:theme="@style/myTheme"
        android:background="#8abe50"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:padding="2dp" />


        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="3dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Integrident"
                android:textColor="#0ee7d5"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <TextView
                android:id="@+id/flowerCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/btShow_first"
                android:layout_width="wrap_content"
                android:text="Showmore..."
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ef0505"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />


        </LinearLayout>



  <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
             android:orientation="vertical"
            android:padding="3dp">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instruction"
                android:textColor="#0ee7d5"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/flowerInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Medium Text"
                 android:maxLines="3"
                android:textAppearance="?android:attr/textAppearanceMedium" />

             <Button
        android:id="@+id/btShowmore"
        android:layout_width="wrap_content"
        android:text="Showmore..."
        android:textAllCaps="false"
                 android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ef0505"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content" />

        </LinearLayout>


          <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentLeft="true">




<Space
    android:layout_width="match_parent"
    android:layout_height="15dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Subscribe"
             android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="#fff"
            android:id="@+id/btn_book"
             android:padding="10dp"
             android:background="@drawable/rounded_shape"
            android:layout_marginStart="0.1dp"
            android:layout_marginLeft="0.1dp" />
      <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

    </LinearLayout>


         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:padding="3dp">



             <!--Image-->
             <ImageView
                 android:id="@+id/flowerPhoto"
                 android:adjustViewBounds="true"
                 android:scaleType="fitXY"
                 android:layout_width="match_parent"
                 android:layout_alignParentStart="true"
                 android:background="@mipmap/ic_launcher"
                 android:layout_height="1dp"
                 android:layout_gravity="center_horizontal"
                 android:layout_alignParentLeft="true" />




             <TextView

                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:textColor="#fff"
                 android:shadowColor="#000000"
                 android:shadowDx="1.5"
                 android:shadowDy="1.3"
                 android:shadowRadius="1.6"
                 android:textSize="40dp"
                 android:layout_gravity="bottom"
                 android:gravity="left"
                 android:text="Medium Text"
                 android:id="@+id/flowerName"
                 android:paddingBottom="8dp"
                 android:layout_marginBottom="20dp"
                 android:textAppearance="?android:attr/textAppearanceMedium" />
<!--End Emage-->

             <TextView
                android:id="@+id/flowerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />
                        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minutes"
                 android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:padding="3dp">




            <TextView
                android:id="@+id/flowerPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>



</ScrollView>
</LinearLayout>