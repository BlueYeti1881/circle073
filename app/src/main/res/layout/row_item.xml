<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:paddingRight="2dp"
    android:paddingLeft="2dp"
    android:paddingTop="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_above"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:padding="7dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/flowerPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        android:src="@drawable/passport"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView
            android:id="@+id/flowerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:text="Sagar Rawal"/>

        <TextView
            android:id="@+id/contact_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:text="Jumla"/>

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="9868336847"/>

        <TextView
            android:id="@+id/contact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:textColor="#0C2BD5"
            android:text="searchbbc1881@gmail.com"/>


    </LinearLayout>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom"
        android:weightSum="1">

        <TextView
            android:id="@+id/call"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".5"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:background="@drawable/shape_button"
            android:text="Call"

            />
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#fff" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_toRightOf="@id/call"
            android:layout_weight=".5"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:background="@drawable/shape_button"
            android:text="Send Email"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>